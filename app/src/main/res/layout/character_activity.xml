<?xml version="1.0"  encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp"  />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp"  />

    <TextView
        android:id="@+id/hp"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="HP:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <TextView
        android:id="@+id/hit"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="Hit:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/hp"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <TextView
        android:id="@+id/dmg"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="Dmg:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/hit"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <TextView
        android:id="@+id/hp_val"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="  10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/hp"/>

    <TextView
        android:id="@+id/hit_val"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:text="+10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/hp_val"
        app:layout_constraintStart_toEndOf="@id/hit"/>

    <TextView
        android:id="@+id/dmg_val"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:text="1d4+1"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/hit_val"
        app:layout_constraintStart_toEndOf="@id/dmg"/>

    <TextView
        android:id="@+id/ac"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="AC:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/hp_val"/>

    <TextView
        android:id="@+id/cmb"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="CMB:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ac"
        app:layout_constraintStart_toEndOf="@id/hit_val"/>

    <TextView
        android:id="@+id/cmd"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="CMD:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cmb"
        app:layout_constraintStart_toEndOf="@id/dmg_val"/>

    <TextView
        android:id="@+id/ac_val"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="  10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ac"/>

    <TextView
        android:id="@+id/cmb_val"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:text="+10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ac_val"
        app:layout_constraintStart_toEndOf="@id/cmb"/>

    <TextView
        android:id="@+id/cmd_val"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:text="  10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cmb_val"
        app:layout_constraintStart_toEndOf="@id/cmd"/>

    <TextView
        android:id="@+id/fort"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="Fort:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ac_val"/>

    <TextView
        android:id="@+id/ref"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="Ref:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/fort"
        app:layout_constraintStart_toEndOf="@id/cmb_val"/>

    <TextView
        android:id="@+id/will"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="Will:"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ref"
        app:layout_constraintStart_toEndOf="@id/cmd_val"/>

    <TextView
        android:id="@+id/fort_val"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="+10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fort"/>

    <TextView
        android:id="@+id/ref_val"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="+10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/fort_val"
        app:layout_constraintStart_toEndOf="@id/ref"/>

    <TextView
        android:id="@+id/will_val"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="+10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ref_val"
        app:layout_constraintStart_toEndOf="@id/will"/>

    <Button
        android:id="@+id/cestus"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Cestus (off)"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/dmg"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/boot"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Boot Blade (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/cestus"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/gladius"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Gladius (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/boot"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/grappling"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Grappling (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/gladius"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/buckler"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Buckler (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/grappling"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/armor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Armor (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/buckler"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/natural"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Natural (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/armor"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/dodge"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Dodge/Dex (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/natural"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/grappled"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Grappled (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/dodge"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/rage"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Rage (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/grappled"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <Button
        android:id="@+id/enlarge"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text=" Enlarge (off)"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/rage"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"/>

    <TextView
        android:id="@+id/st"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="STR:"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/dmg"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <TextView
        android:id="@+id/dx"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="DEX:"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/st"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <TextView
        android:id="@+id/cn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="CON:"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/dx"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <TextView
        android:id="@+id/in"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="INT:"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/cn"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <TextView
        android:id="@+id/wi"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="WIL:"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/in"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <TextView
        android:id="@+id/ch"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="CHA:"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/wi"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <TextView
        android:id="@+id/st_val"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dmg"
        app:layout_constraintStart_toEndOf="@id/st"/>

    <TextView
        android:id="@+id/dx_val"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/st_val"
        app:layout_constraintStart_toEndOf="@id/dx"/>

    <TextView
        android:id="@+id/cn_val"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/dx_val"
        app:layout_constraintStart_toEndOf="@id/cn"/>

    <TextView
        android:id="@+id/in_val"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cn_val"
        app:layout_constraintStart_toEndOf="@id/in"/>

    <TextView
        android:id="@+id/wi_val"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/in_val"
        app:layout_constraintStart_toEndOf="@id/wi"/>

    <TextView
        android:id="@+id/ch_val"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/wi_val"
        app:layout_constraintStart_toEndOf="@id/ch"/>

    <Button
        android:id="@+id/st_up"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="+"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dmg"
        app:layout_constraintStart_toEndOf="@id/st_val"/>

    <Button
        android:id="@+id/st_down"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="-"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/dmg"
        app:layout_constraintStart_toEndOf="@id/st_up"/>

    <Button
        android:id="@+id/dx_up"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="+"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/st_up"
        app:layout_constraintStart_toEndOf="@id/dx_val"/>

    <Button
        android:id="@+id/dx_down"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="-"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/st_down"
        app:layout_constraintStart_toEndOf="@id/dx_up"/>

    <Button
        android:id="@+id/cn_up"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="+"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dx_up"
        app:layout_constraintStart_toEndOf="@id/cn_val"/>

    <Button
        android:id="@+id/cn_down"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="-"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/dx_down"
        app:layout_constraintStart_toEndOf="@id/cn_up"/>

    <Button
        android:id="@+id/in_up"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="+"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cn_up"
        app:layout_constraintStart_toEndOf="@id/in_val"/>

    <Button
        android:id="@+id/in_down"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="-"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/cn_down"
        app:layout_constraintStart_toEndOf="@id/in_up"/>

    <Button
        android:id="@+id/wi_up"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="+"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/in_up"
        app:layout_constraintStart_toEndOf="@id/wi_val"/>

    <Button
        android:id="@+id/wi_down"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="-"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/in_down"
        app:layout_constraintStart_toEndOf="@id/wi_up"/>

    <Button
        android:id="@+id/ch_up"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="+"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/wi_up"
        app:layout_constraintStart_toEndOf="@id/ch_val"/>

    <Button
        android:id="@+id/ch_down"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="-"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/wi_down"
        app:layout_constraintStart_toEndOf="@id/ch_up"/>

    <Button
        android:id="@+id/hurt"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="HURT"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/ch_down"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <Button
        android:id="@+id/heal"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="HEAL"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/hurt"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <Button
        android:id="@+id/rage_rounds"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="RAGE (10)"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/heal"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="RESET"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/rage_rounds"
        app:layout_constraintStart_toEndOf="@id/cestus"/>

    <Button
        android:id="@+id/more"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="MORE..."
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/reset"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"/>

</android.support.constraint.ConstraintLayout>